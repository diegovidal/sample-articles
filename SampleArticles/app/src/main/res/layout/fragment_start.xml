<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/bt_start_articles"
        style="@style/ButtonDefault"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_start_articles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/ButtonDefaultText"
            android:text="@string/start_articles_label" />

        <ProgressBar
            android:id="@+id/pb_start_articles"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            tools:visibility="visible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bt_clear_articles"
        style="@style/ButtonDefault">

        <TextView
            android:id="@+id/tv_clear_articles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/ButtonDefaultText"
            android:text="@string/clear_articles_label" />

        <ProgressBar
            android:id="@+id/pb_clear_articles"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            tools:visibility="visible"/>

    </RelativeLayout>

</LinearLayout>